<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >


            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                >

            </ImageView>

          <EditText
              android:id="@+id/login_email"
              android:layout_alignParentStart="true"
              android:hint="Email..."
              android:inputType="textEmailAddress"
              android:layout_below="@+id/login_image"
              android:background="@drawable/inputs"
              android:padding="4dp"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="17dp"
              android:layout_marginRight="17dp"
              android:drawableStart="@drawable/email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

          </EditText>

            <EditText
                android:id="@+id/login_password"
                android:layout_alignParentStart="true"
                android:hint="Password..."
                android:inputType="textPassword"
                android:layout_below="@+id/login_email"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:drawableStart="@drawable/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:id="@+id/forgot_password_link"
                android:layout_alignParentStart="true"
                android:text="Forget Password?"
                        android:layout_centerHorizontal="true"
                android:textAlignment="textEnd"

                android:layout_below="@id/login_password"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="23dp"
                  android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <Button
                android:id="@+id/login_button"
                android:padding="4dp"
                android:background="@drawable/buttons"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_password_link"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"

                >

            </Button>

            <TextView
                android:id="@+id/need_new_account_link"
                android:layout_alignParentStart="true"
                android:text="Need Account"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"

                android:layout_below="@id/login_button"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="23dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:id="@+id/login_using"
                android:layout_alignParentStart="true"
                android:text="OR Login Using"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"

                android:layout_below="@id/need_new_account_link"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="23dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <Button
                android:id="@+id/phone_login_button"
                android:padding="4dp"
                android:background="@drawable/buttons"
                android:text="Phone"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_using"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
android:drawableStart="@drawable/phone"

                ></Button>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>